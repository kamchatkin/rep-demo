<!DOCTYPE html>
<html>
  <head>
    <title>RepDemo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'true' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'true' %>
  </head>

  <body>
    <header>
      <div class="container">
        <div class="row">
          <div class="col-sm-2">
            <%= link_to 'rep-demo', root_url %>
          </div>
          <div class="col-sm-10">
            Магазин:
            <%= link_to @shop ? @shop.name : 'Не выбран', detect_shop_url %>
          </div>

        </div>
      </div>
    </header>

    <%= yield %>

    <% if @shop %>
    <script type="text/javascript" charset="utf-8">
      window['current_shop'] = { name:"<%= @shop.name %>", lat:<%= @shop.latitude %>, lng:<%= @shop.longitude %> };
      window['current_geo'] = { lat: <%= session[:curr_geo]['latitude'] %>, lng: <%= session[:curr_geo]['longitude'] %> };
    </script>
    <% end %>
  </body>
</html>
